{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "./dist/",
		"strict": true,
		"sourceMap": true,
		"target": "ES6",
		"declaration": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"esModuleInterop": true	
	},
	"include": [
		"source/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
